{"ast":null,"code":"export default {\n  name: 'app',\n\n  data() {\n    return {\n      api_key: 'fdccdbd00a7bd82d4054db6b39622d5f',\n      url_base: 'https://api.openweathermap.org/data/2.5/',\n      query: '',\n      weather: {}\n    };\n  },\n\n  methods: {\n    fetchWeather(e) {\n      if (e.key == \"Enter\") {\n        fetch(`${this.url_base}weather?q=${this.query}&units=metric&APPID=${this.api_key}`).then(res => {\n          return res.json();\n        }).then(this.setResults);\n      }\n    },\n\n    setResults(results) {\n      this.weather = results;\n    },\n\n    dateBuilder() {\n      let d = new Date();\n      let months = [\"January\", \"February\", \"March\", \"April\", \"May\", \"June\", \"July\", \"August\", \"September\", \"October\", \"November\", \"December\"];\n      let days = [\"Sunday\", \"Monday\", \"Tuesday\", \"Wednesday\", \"Thursday\", \"Friday\", \"Saturday\"];\n      let day = days[d.getDay()];\n      let date = d.getDate();\n      let month = months[d.getMonth()];\n      let year = d.getFullYear();\n      return `${day} ${date} ${month} ${year}`;\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAwBA,eAAe;EACbA,IAAI,EAAE,KADO;;EAEbC,IAAI,GAAG;IACL,OAAO;MACLC,OAAO,EAAE,kCADJ;MAELC,QAAQ,EAAE,0CAFL;MAGLC,KAAK,EAAE,EAHF;MAILC,OAAO,EAAE;IAJJ,CAAP;EAMD,CATY;;EAUbC,OAAO,EAAE;IACPC,YAAY,CAACC,CAAD,EAAI;MACd,IAAIA,CAAC,CAACC,GAAF,IAAS,OAAb,EAAsB;QACpBC,KAAK,CAAE,GAAE,KAAKP,QAAS,aAAY,KAAKC,KAAM,uBAAsB,KAAKF,OAAQ,EAA5E,CAAL,CACGS,IADH,CACQC,GAAE,IAAK;UACX,OAAOA,GAAG,CAACC,IAAJ,EAAP;QACD,CAHH,EAGKF,IAHL,CAGU,KAAKG,UAHf;MAIF;IACD,CARM;;IASPA,UAAU,CAACC,OAAD,EAAU;MAClB,KAAKV,OAAL,GAAeU,OAAf;IACD,CAXM;;IAYPC,WAAW,GAAG;MACZ,IAAIC,IAAI,IAAIC,IAAJ,EAAR;MACA,IAAIC,MAAK,GAAI,CAAC,SAAD,EAAY,UAAZ,EAAwB,OAAxB,EAAiC,OAAjC,EAA0C,KAA1C,EAAiD,MAAjD,EAAyD,MAAzD,EAAiE,QAAjE,EAA2E,WAA3E,EAAwF,SAAxF,EAAmG,UAAnG,EAA+G,UAA/G,CAAb;MACA,IAAIC,IAAG,GAAI,CAAC,QAAD,EAAW,QAAX,EAAqB,SAArB,EAAgC,WAAhC,EAA6C,UAA7C,EAAyD,QAAzD,EAAmE,UAAnE,CAAX;MACA,IAAIC,GAAE,GAAID,IAAI,CAACH